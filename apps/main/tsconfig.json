{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "paths": {
      "~/pages/*": ["src/pages/*"],
      "~/components/*": ["src/components/*"],
      "~/styles/*": ["src/styles/*"],
      "~/hooks/*": ["src/hooks/*"],
      "~/utils/*": ["src/utils/*"],
      "~/apis/*": ["src/apis/*"],
      "~/stores/*": ["src/stores/*"],
      "~/types/*": ["src/types/*"],
      "~/constants/*": ["src/constants/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
