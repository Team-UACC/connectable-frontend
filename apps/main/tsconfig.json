{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "paths": {
      "~/pages/*": ["src/pages/*"],
      "~/components/*": ["src/components/*"],
      "~/styles/*": ["src/styles/*"],
      "~/recoils/*": ["src/recoils/*"],
      "~/hooks/*": ["src/hooks/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
